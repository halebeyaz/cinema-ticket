<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="card">
        <div class="body">
            <div class="table-responsive">
                <table id="example" class="table table-striped table-bordered nowrap" cellspacing="0" style="width:100%;" hidden="hidden">
                    <thead>
                        <tr>
                            <th>Movie Poster</th>
                            <th>Movie Name</th>
                            @*<th>Movie Description</th>*@
                            <th>Beginning Date</th>
                            <th>Ending Date</th>
                            <th>Saloon</th>

                            <th>Operations</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                        <tr>
                  
                            <td>

                                @if (item.movie_poster == null)
                                {

                                    <img src="~/Content/Posters/indir.png" height="180" />

                                }
                                else
                                {
                                    <img src=@item.movie_poster height="180" />
                                }
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.movie_name)
                            </td>

                            @*<td>
                                @Html.DisplayFor(modelItem => item.movie_description)
                            </td>*@
                            <td>
                                @Html.DisplayFor(modelItem => item.movie_beg_date)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.movie_end_date)
                            </td>
                            <td>
                               
                                @Html.DisplayFor(modelItem => item.s_id)
                            </td>

                            <td>
                                <span class="btn bg-cyan waves-effect" id="detail" data-toggle="tooltip" data-placement="top" title="" data-original-title="See Details" onclick="createModal('@Url.Action("Details", "MovieAdmin" , new {id=item.movie_id })')">
                                    <i class="material-icons"> folder</i>
                                </span>

                                <a class="btn bg-purple waves-effect" data-toggle="tooltip" data-placement="top" title="" data-original-title="Edit" href="@Url.Action("Edit", "MovieAdmin" , new {id=item.movie_id})">  <i class="material-icons">mode_edit</i></a>

                                <a class="btn bg-red waves-effect" data-target="#deleteMovie" data-toggle="tooltip" data-placement="top" title="" data-original-title="Delete" onclick="JavaSend(@item.movie_id)">  <i class="material-icons">delete</i></a>

                                <script>
                                    function JavaSend(id) {
                                        var link = "/MovieAdmin/Delete/" + id;
                                        $("#modalLink").attr("href", link);
                                        $("#deleteMovie").modal();
                                    }
                                </script>


                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="myModal">
    <div class="modal-dialog ">
        <div class="modal-content" id="modelContent" style="top:50px;">

        </div>
    </div>
</div>
<script src="~/Content/Site/js/jquery.js"></script>

<script>
    function createModal(url) {
        $('#modelContent').load(url);
        $('#myModal').modal('show');
    }
</script>
<!-- Modal -->
<div class="modal fade" id="deleteMovie" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content" style="top: 50px;">
            <div class="modal-header modal-header-success" style="background-color: #d9534f;color: white !important;text-align: center;
        font-size: 30px;">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h3><i class="glyphicon glyphicon-alert"></i> Record Delete Confirmation</h3>
            </div>
            <div class="modal-body">
                <h4>Record will be deleted.</h4>
            </div>
            <div class="modal-footer">
                <a class="btn btn-danger pull-right" id="modalLink"><i class="material-icons">delete</i> Delete</a>
                <button type="button" style="margin-right:10px;" class="btn btn-primary pull-right" data-dismiss="modal"><i class="material-icons"> power_settings_new</i>Close</button>
            </div>
        </div>
    </div>
</div>
<!-- Modal -->

