@model web_cinema.Models.users


<head>
    <style>
        table {
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }
    </style>


</head>
<div class="modal-header" style="background-color: #AD1457; color: #FFC107 ">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h2 class="modal-title" style="text-align: center"> User Details: @Model.user_name</h2>
</div>
<div class="modal-body">
    <table style="table-layout: fixed; width: 100%">

        <tr>
            <td>User ID</td>
            <td style="word-wrap: break-word">
                @Model.user_id
            </td>
        </tr>
        <tr>
            <td>User Name</td>
            <td style="word-wrap: break-word">
                @Model.user_name
            </td>
        </tr>
        <tr>
            <td>User Email</td>
            <td style="word-wrap: break-word">
                @Model.user_email
            </td>
        </tr>
        
        <tr>
            <td>User Phone</td>
            <td style="word-wrap: break-word">
                @Model.user_phone
            </td>
        </tr>

    </table>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-primary" data-dismiss="modal"><i class="material-icons">power_settings_new</i> Kapat</button>
</div>

